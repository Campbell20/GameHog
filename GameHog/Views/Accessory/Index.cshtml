            @Html.DisplayFor(modelItem => item.AccessoryDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessoryAvailability)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessoryAvailabilityCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessoryShippingUSAOnly)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessoryUPCCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeveloperName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublisherName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AccessoryId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AccessoryId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AccessoryId })
        </td>
    </tr>
}

</table>
