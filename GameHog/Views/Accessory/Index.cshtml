            @Html.DisplayNameFor(model => model.AccessoryAvailabilityCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessoryShippingUSAOnly)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessoryUPCCode)
